SELECT CITY, LENGTH(CITY)
FROM STATION
WHERE CITY = (SELECT CITY FROM STATION ORDER BY LENGTH(CITY), CITY LIMIT 1) #SELECT the shortest CITY name
UNION
SELECT CITY, LENGTH(CITY)
FROM STATION
WHERE CITY = (SELECT CITY FROM STATION ORDER BY LENGTH(CITY) DESC, CITY LIMIT 1)
#SELECT htelongest CITY name


Problem - https://www.hackerrank.com/challenges/weather-observation-station-5/problem?isFullScreen=true
